<h1>Registrarse como Estudiante.</h1>

<div class="jumbotron border rounded text-break">
    <form action="/Home/RegisterStudent" method="post">
        <div class="container m-4">
            <div class="form-row d-flex justify-content-start">
                <div class="form-group col-md-4 m-2">
                    <label for="Username">Nombre</label>
                    <input type="text" class="form-control" name="Username" placeholder="Nombre">
                </div>
                <div class="form-group col-md-4 m-2">
                    <label for="Email">Correo</label>
                    <input type="text" class="form-control" name="Email" placeholder="usuario@correo.com">
                </div>
                <div class="form-group col-md-3 m-2">
                    <label for="Password">Contraseña</label>
                    <input type="password" class="form-control" name="Password" placeholder="Contraseña">
                </div>
            </div>
            <button type="submit" class="btn btn-primary m-2">Registrarse</button>
        </div>
    </form>
</div>
